<%- include('./partials/header.ejs')%>

<!-- <div class="w-full "> -->

<div class="w-full h-screen bg-center bg-cover bg-zinc-300 flex itmes-center justify-center grid place-content-center ">
   <div class="w-[25vw] bg-white px-20 py-10 rounded-[30px]">
    <div class="flex justify-center">
      <img class="h-10 w-10" src="https://upload.wikimedia.org/wikipedia/commons/0/08/Pinterest-logo.png" alt="">
    </div>
    
    <h1 class="text-2xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none mt-4">Create New Account</h1> 
    <form class="mt-6" action="/regster" method="post">
     <!-- <label class="text-sm ext-zinc-700 text-center " for="email">Email</label>    -->
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
      <!-- <label class="text-sm ext-zinc-700 text-center" for="password">password</label> -->
      <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
     
      <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit"
      value="Create New Account">
      <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service;</p>
    </form>
    <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center" href="/">Login Existing Account</a>
   </div>
</div>




