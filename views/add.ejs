<%- include('./partials/header.ejs')%>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1> Create a new Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="createpost" method="post" >
            <input  class="text-black block w-1/3 px-3 py-2 " type="file" name="postImage">
            <input  class="text-black block w-1/3 px-3 py-2 border-1 mt-2 rounded-md bg-zinc-400" type="text" placeholder="title" name="title">
            <textarea  class="text-black block w-1/3 h-60 px-3 py-2 border-1 mt-2 rounded-md bg-zinc-400" type="text" placeholder="descriptions" name="descriptions"></textarea>
            <input class="block w-1/3 px-3 py-2 border-1 mt-2 bg-red-700 rounded-xl hover:bg-red-900" type="submit"
            value="Create Post"
            >
        </form>
</div>

